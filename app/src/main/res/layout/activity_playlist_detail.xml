<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:ignore="ExtraText">

    <!-- Playlist Image -->
    <ImageView
        android:id="@+id/img_playlist_cover"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Playlist Title -->
    <TextView
        android:id="@+id/txt_playlist_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Playlist usuk này chill lắm 😭💕 #4"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_playlist_cover"
        app:layout_constraintTop_toTopOf="@id/img_playlist_cover"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp" />

    <!-- Play Button (tròn, nền xanh, icon trắng) -->
    <FrameLayout
        android:id="@+id/btn_play_wrapper"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_circle"
        app:layout_constraintTop_toBottomOf="@id/img_playlist_cover"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/btn_play_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_play"
            app:tint="@android:color/white" />
    </FrameLayout>

    <!-- RecyclerView for Songs -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_songs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_play_wrapper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
