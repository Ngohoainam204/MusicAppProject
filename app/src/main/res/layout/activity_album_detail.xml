<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/album_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Ảnh bìa album -->
    <ImageView
        android:id="@+id/album_cover_detail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile" />

    <!-- Nút back -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="31dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back_lyric" />

    <!-- Tên album -->
    <TextView
        android:id="@+id/txt_album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Album Name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/album_cover_detail"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- Thông tin thêm -->
    <TextView
        android:id="@+id/txt_artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số bài hát"
        android:textColor="#B3B3B3"
        android:textSize="14sp"
        android:layout_below="@id/txt_album_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <!-- layout_actions giống playlist -->
    <LinearLayout
        android:id="@+id/layout_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_artist_name"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_add_to_favorites"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_heart_selection"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/btn_download"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:padding="6dp"
            android:src="@drawable/ic_download"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/btn_more"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:padding="6dp"
            android:src="@drawable/ic_more_vert"
            app:tint="@color/black" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btn_shuffle"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/ic_shuffle"
            app:tint="@color/black" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_play_wrapper"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_circle">

            <ImageView
                android:id="@+id/btn_play_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_play"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@android:color/white" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <!-- RecyclerView hiển thị danh sách bài hát trong album -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_album_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/layout_actions"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="80dp"
        android:layout_marginHorizontal="16dp" />
</RelativeLayout>
