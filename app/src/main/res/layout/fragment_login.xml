<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#69F0AE"
    android:padding="24dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true">

        <!-- Logo + Tên ứng dụng -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/music"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MusicApp"
                android:textSize="32sp"
                android:textColor="#C71585"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Tiêu đề đăng nhập -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:textSize="40sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <!-- Ô nhập Username -->
        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Enter Gmail"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColorHint="#757575"
            android:textColor="#000000"
            android:layout_marginTop="24dp"/>

        <!-- Ô nhập Password -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <!-- Icon ẩn/hiện password -->
            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="48dp"
                android:textColor="#000000"
                android:textColorHint="#757575" />

            <ImageView
                android:id="@+id/togglePassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/blind"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                app:tint="#757575"/>
        </RelativeLayout>

        <!-- CheckBox Remember Account -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:layout_marginTop="16dp">

            <CheckBox
                android:id="@+id/checkBoxRemember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember account"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Button Đăng Nhập -->
        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sign In"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button_purple"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or sign in with"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginTop="24dp"/>

        <ImageView
            android:id="@+id/imgGoogleSignIn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/google"
            android:background="@drawable/bg_google_button"
            android:scaleType="centerInside"
            android:layout_marginTop="16dp"
            android:contentDescription="Sign in with Google"
            android:clickable="true"
            android:focusable="true"/>





        <!-- Đăng ký tài khoản mới -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not a member?"
                android:textSize="14sp"
                android:textColor="#757575"/>

            <TextView
                android:id="@+id/btnRegisterNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Register Now"
                android:textSize="14sp"
                android:textColor="#FF4081"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
