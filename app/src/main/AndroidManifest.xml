<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".main.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/music"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/music"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        android:usesCleartextTraffic="true"
        tools:targetApi="tiramisu">

        <!-- SplashActivity là màn hình khởi động -->
        <activity
            android:name=".login_register.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".detail.AlbumDetailActivity" />
        <activity android:name=".detail.ArtistDetailActivity" />

        <activity
            android:name=".login_register.RegisterLoginActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication" />

        <activity android:name=".detail.PlaylistDetailActivity" />

        <activity
            android:name=".login_register.ChangePasswordActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication" />

        <activity
            android:name=".main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="callback"
                    android:scheme="your-app-scheme" />
            </intent-filter>
        </activity>

        <activity
            android:name=".nowplaying.NowPlayingActivity"
            android:exported="true" />
    </application>

</manifest>
